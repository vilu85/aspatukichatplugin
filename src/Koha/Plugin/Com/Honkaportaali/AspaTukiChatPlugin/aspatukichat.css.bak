.bootstrap_chat {
  min-height: 100vh;
}

.text-small {
  font-size: 0.9rem;
}

.messages-box, .chat-box {
  max-height: 300px;
  min-height: 150px;
  overflow-y: scroll;
}

.rounded-lg {
  border-radius: 0.5rem;
}

.ml-2, .mx-2 {
  margin-left: .5rem!important;
}

.pl-3, .px-3 {
  padding-left: 1rem!important;
}

.pr-3, .px-3 {
  padding-right: 1rem!important;
}

.rounded {
  border-radius: .25rem!important;
}

.shadow-sm {
  box-shadow: 0 .125rem .25rem rgba(0,0,0,.075)!important;
}

.mb-1, .my-1 {
  margin-bottom: .25rem!important;
}

.bg-light {
  background-color: #f8f9fa!important;
}

.mb-0, .my-0 {
  margin-bottom: 0!important;
}

.shadow-sm {
  box-shadow: 0 .125rem .25rem rgba(0,0,0,.075)!important;
}

.pb-2, .py-2 {
  padding-bottom: .5rem!important;
}

.pt-2, .py-2 {
  padding-top: .5rem!important;
}

.mb-1, .my-1 {
  margin-bottom: .25rem!important;
}

.shadow {
  box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
}

.ml-auto, .mx-auto {
  margin-left: auto!important;
}

.mb-3, .my-3 {
  margin-bottom: 1rem!important;
  /*margin-top: 0px!important;*/
  /*margin-bottom: 0px!Important;*/
}

.w-100 {
  width: 100%!important;
}

.col-7 {
  -ms-flex: 0 0 58.333333%;
  flex: 0 0 58.333333%;
  max-width: 58.333333%;
}

.pl-0, .px-0 {
  padding-left: 0!important;
}

.modal.modal-scrolling .modal-dialog {
  position: fixed;
  transition: transform .3s ease-out,-webkit-transform .3s ease-out;
  right: 10px;
  bottom: 10px;
}

.mx-8 {
  margin-left: 8px;
}

#chatmessages {
  /*height: 20%!important;*/
  /*overflow-y: scroll;*/
}

#loadingAnim {
  display: none;
}

.media.w-100.ml-auto.mb-3 {
  margin-top: 0px!important;
  margin-bottom: 0px!important;
}

.mb-0.text-white.padding-6 {
  padding: 6px;
}

.padding-6 {
  padding: 6px!important;
}

iframe {
  width: 100%;
  height: 100%;
  border-width: 0px;
  padding: 0px;
  margin: 0px;
}

div#chatmodal {
  display: none;
  position: fixed;
  bottom: 5px;
  right: 12px;
  top: auto;
  left: auto;
  z-index: 9999;
}